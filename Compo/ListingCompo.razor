@using Microsoft.AspNetCore.Components.Web;
@using Mansoura.Services;
@using Mansoura.Model;
@inject Mansoura.Services.JsonFileIDataService MemeberService;

<h3>Member List</h3>

<div class="card-columns">
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
        Launch demo modal
    </button>
    @foreach (var item in MemeberService.GetMembers().MemberList)
    {
        <div class="card">
            <div class="card-img"
                 style="background-image: url('@item.Owner.ProfileImage'); height: 330px; background-repeat: no-repeat;background-size: cover;">
            </div>
            <div class="card-body">
                <h5 class="card-title">@item.Owner.DisplayName</h5>
            </div>
        </div>
        <div class="card-footer">
            <small class="text-muted">
                @*<button @onclick="(e=>SelectProduct(item.Owner.UserId))" class="btn btn-primary"
                            data-toggle="model" data-target="#exampleModal">
                        See More
                    </button>*@
            </small>
        </div>
    }
</div>
@if (Member != null)
{
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>
}

@code {
    Member Member;
    public void SelectProduct(int userID)
    {
        Member = MemeberService.GetMembers().MemberList.Where(s => s.Owner.UserId == userID).FirstOrDefault();

    }
}
